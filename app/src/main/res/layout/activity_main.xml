<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="10dp">


    <cn.knero.heart.widget.SentenceLikeView
            android:id="@+id/flowLikeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <cn.knero.heart.widget.BeatHeartView
                android:id="@+id/heart_beat_view"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/bead_heart_width"
                android:layout_height="@dimen/bead_heart_height"
                app:scaleFactor="1"
                app:duration="1000"
                android:layout_margin="20dp"/>
    </cn.knero.heart.widget.SentenceLikeView>

</RelativeLayout>